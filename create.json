{
    "project-name": "Default template",
    "files": [
        ["src", ".cc"]
    ],
    "buildir": "home",
    "compilers-filter": {
        ".cc": "clang++"
    },
    "run-before": ["@echo \"Causa-san\""],
    "link-args": ["-lsimdjson"],
    "compile-args": {
        "clang++": "--std=gnu++23"
    },
    "includes": {
        "clang++": "includes"
    },
    "extra": {
        "use-ccache": true
    }
}